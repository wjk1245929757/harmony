<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="vertical_center"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:web_text1"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:margin="4vp"
        ohos:text_alignment="center"
        ohos:text="提取网页文字"
        ohos:text_size="30vp"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:top_margin="6vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_alignment="center">
        <Text
            ohos:id="$+id:web_text2"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:margin="4vp"
            ohos:text_alignment="center"
            ohos:text="网址URL:"
            ohos:text_size="20vp"/>
        <TextField
            ohos:id="$+id:web_textfield1"
            ohos:layout_direction="ltr"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:margin="4vp"
            ohos:text_alignment="left"
            ohos:start_padding="5vp"
            ohos:end_padding="5vp"
            ohos:hint="请输入网址"
            ohos:multiple_lines="false"
            ohos:text_size="20vp"
            ohos:background_element="$graphic:background_ability_input"
            ohos:text_input_type="pattern_text"/>
    </DirectionalLayout>
    <Button
        ohos:id="$+id:web_button1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="提交"
        ohos:text_size="20vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:layout_alignment="center"
        ohos:background_element="$graphic:background_ability_button"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_direction="ltr">
        <Text
            ohos:id="$+id:web_text3"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:padding="5vp"
            ohos:text="输出结果"
            ohos:text_size="20vp"/>
        <Button
            ohos:id="$+id:web_button2"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="end"
            ohos:text="下载"
            ohos:text_size="20vp"
            ohos:start_margin="200vp"
            ohos:end_margin="4vp"
            ohos:padding="5vp"
            ohos:background_element="$graphic:background_ability_button"/>
    </DirectionalLayout>
    <TextField
        ohos:id="$+id:web_text4"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:text_alignment="left"
        ohos:text=""
        ohos:text_size="15vp"
        ohos:margin="1vp"
        ohos:padding="5vp"
        ohos:background_element="$graphic:background_ability_textfield"
        ohos:text_input_type="pattern_text"/>
</DirectionalLayout>