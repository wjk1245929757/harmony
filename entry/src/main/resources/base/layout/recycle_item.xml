<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability_item">

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_direction="ltr">
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical"
            ohos:start_margin="5vp"
            ohos:end_margin="5vp"
            ohos:weight="2">
            <Text
                ohos:id="$+id:item_text1"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="4vp"
                ohos:text_size="16fp"
                ohos:text_alignment="left"/>
            <Text
                ohos:id="$+id:item_text2"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="4vp"
                ohos:text_size="16fp"
                ohos:text_alignment="left"
                />
        </DirectionalLayout>
        <Button
            ohos:id="$+id:item_btn1"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:text="下载"
            ohos:text_size="20vp"
            ohos:layout_direction="ltr"
            ohos:layout_alignment="center"
            ohos:start_margin="20vp"
            ohos:end_margin="10vp"
            ohos:padding="5vp"
            ohos:background_element="$graphic:background_ability_button"/>
    </DirectionalLayout>

</DirectionalLayout>