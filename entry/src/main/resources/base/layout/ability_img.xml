<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:img_text1"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:margin="4vp"
        ohos:text_alignment="center"
        ohos:text="提取图片文字"
        ohos:text_size="30vp"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:top_margin="6vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_alignment="center">
        <Text
            ohos:id="$+id:img_text2"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:margin="4vp"
            ohos:text_alignment="center"
            ohos:text="选择图片:"
            ohos:text_size="20vp"/>
        <Button
            ohos:id="$+id:img_btn1"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:margin="4vp"
            ohos:text_alignment="center"
            ohos:text="选择文件"
            ohos:text_size="20vp"
            ohos:background_element="$graphic:background_ability_button"/>
        <Text
            ohos:id="$+id:img_text3"
            ohos:layout_direction="ltr"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:margin="4vp"
            ohos:text_alignment="left"
            ohos:start_padding="5vp"
            ohos:end_padding="5vp"
            ohos:multiple_lines="false"
            ohos:text_size="20vp"/>
    </DirectionalLayout>
    <Image
        ohos:id="$+id:img_img"
        ohos:layout_alignment="center"
        ohos:scale_mode="zoom_center"
        ohos:height="100vp"
        ohos:width="100vp"/>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:top_margin="6vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_alignment="center">
        <Text
            ohos:id="$+id:img_text4"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:margin="4vp"
            ohos:text_alignment="center"
            ohos:text="输出格式:"
            ohos:text_size="20vp"/>
        <Picker
            ohos:id="$+id:img_picker"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:normal_text_size="15vp"
            ohos:selected_text_size="20vp"
            ohos:margin="4vp"
            ohos:min_value="0"
            ohos:max_value="7"
            ohos:background_element="#f3f3f3"/>
    </DirectionalLayout>
    <Button
        ohos:id="$+id:img_btn2"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="提交"
        ohos:text_size="20vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:layout_alignment="center"
        ohos:background_element="$graphic:background_ability_button"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:layout_direction="ltr">
        <Text
            ohos:id="$+id:img_text5"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:padding="5vp"
            ohos:text="输出结果"
            ohos:text_size="20vp"/>
        <Button
            ohos:id="$+id:img_btn3"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="end"
            ohos:text="下载"
            ohos:text_size="20vp"
            ohos:start_margin="200vp"
            ohos:end_margin="4vp"
            ohos:padding="5vp"
            ohos:background_element="$graphic:background_ability_button"/>
    </DirectionalLayout>

</DirectionalLayout>